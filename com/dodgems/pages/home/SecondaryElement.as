package com.dodgems.pages.home {		import flash.display.*;	import flash.text.*;	import flash.events.*;	import flash.geom.Rectangle;	import flash.net.URLRequest;	import flash.net.URLLoader;	import flash.net.navigateToURL;	import com.greensock.TweenMax;	import com.greensock.easing.*;		import flash.geom.Point;		import flash.geom.Rectangle;		import flash.utils.Timer;				public class SecondaryElement extends Sprite {				public var image:Bitmap;		public var hit:Sprite;		public var imgMask:Sprite;				private var callBack:Function;				private var navHeight:Number = 227;		private var _id:int;				private var startX:Number;		private var startY:Number;		private var imgLoader:Loader;				private var isReady:Boolean = false;								public function SecondaryElement(url:String, callback:Function, id:int) {			this.callBack = callback;			_id = id;			createContainers();			loadImage(url);					}						private function createContainers():void {			imgMask = new SecondaryHit() as Sprite;			imgMask.x = -5;			addChild(imgMask);			imgMask.alpha = 0;						hit = new SecondaryHit() as Sprite;			addChild(hit);			hit.alpha = 0;			hit.x = -5;		}						private function finishAnim():void {			addChild(hit);			callBack();			isReady = true;		}						public function rollOver():void {			if (isReady) {				scaleX = scaleY = 1.1;				x = (x - (width * 0.05));				y = (y - (height * 0.05));								TweenMax.from(image, 2, { tint:0xFFFFFF, ease:Strong.easeOut } );			}		}						public function rollOut():void {			TweenMax.killTweensOf(image, true);			this.scaleX = this.scaleY = 1;;			this.x = startX;			this.y = startY;		}				private function loadImage(url:String):void {			imgLoader = new Loader();			imgLoader.contentLoaderInfo.addEventListener(Event.COMPLETE, imgLoaded, false, 0, true);			imgLoader.load(new URLRequest(url));		}				private function imgLoaded(e:Event):void {			image = e.target.content;			image.smoothing = true;			addChild(image);						imgLoader.contentLoaderInfo.removeEventListener(Event.COMPLETE, imgLoaded);			imgLoader = null;						startX = this.x;			startY = this.y;						mask = imgMask;			imgMask.mouseEnabled = false;						image.y = imgMask.y = hit.y = (navHeight - image.height) / 2;						TweenMax.from(image, 0.5, { scaleX:1.5, scaleY:1.5, x:"-50", tint:0xFFFFFF, ease:Bounce.easeOut, onComplete:finishAnim } );			image.alpha = 1;		}				public function get id():Number {			return _id;		}					}}